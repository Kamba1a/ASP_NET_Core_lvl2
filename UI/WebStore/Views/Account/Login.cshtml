@model LoginUserViewModel

@{
    ViewData["Title"] = "Login";
}

<section id="form">
    <!--form-->
    <div class="container">
        <div class="row col-sm-4">
            <div class="login-form">
                <!--login form-->
                <h2>Login to your account</h2>
                <form method="post" asp-action="Login" asp-antiforgery="true">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input asp-for="UserName" placeholder="@nameof(Model.UserName)" />
                    <input asp-for="Password" placeholder="@nameof(Model.Password)" />
                    <span>
                        <input asp-for="RememberMe" type="checkbox" class="checkbox">
                        Keep me signed in
                    </span>
                    <input asp-for="ReturnUrl" type="hidden" /> @*в принятой модели LoginUserViewModel было задано значение ReturnUrl, поэтому передаем его дальше с моделью, которую теперь отправляем*@
                    <button type="submit" class="btn btn-default">Login</button>
                </form>
            </div><!--/login form-->
        </div>
    </div>
</section><!--/form-->