@model RegisterUserViewModel

@{
    ViewData["Title"] = "Registrartion";
}

<section id="form">
    <!--form-->
    <div class="container">
        <div class="row col-sm-4">
            <div class="signup-form">
                <!--sign up form-->
                <h2>New User Signup!</h2>
                <form method="post" asp-action="Registration" asp-antiforgery="true">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input asp-for="UserName" placeholder="@nameof(Model.UserName)" />
                    <input asp-for="Email" placeholder="@nameof(Model.Email)" />
                    <input asp-for="Password" placeholder="@nameof(Model.Password)" />
                    <input asp-for="ConfirmPassword" placeholder="@nameof(Model.ConfirmPassword)" />
                    <button type="submit" class="btn btn-default">Signup</button>
                </form>
            </div><!--/sign up form-->
        </div>
    </div>
</section><!--/form-->