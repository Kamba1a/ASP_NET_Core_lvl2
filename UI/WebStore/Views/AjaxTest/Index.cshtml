@{
    ViewData["Title"] = "Ненавязчивый AJAX";
}

<div class="container">
    <div class="row">
        <div class="col-sm-4">
            <h4>Рендринг на стороне сервера</h4>

            <a class="btn btn-default"
               data-ajax="true" @*включение ajax библиотеки*@
               data-ajax-url="@Url.Action("GetTestView","AjaxTest", new { id = 42, msg = "Test message!!!" })" @*адрес отправки запроса*@
               data-ajax-update="#panel-server" @*указываем, куда выгружать данные*@
               data-ajax-loading="#spinner-server"> @*указываем панель со значком загрузки для отображения только во время загрузки данных*@
                Загрузка
            </a>

            <span id="spinner-server" style="display: none"> @*панель со значком загрузки*@
                <i class="fa fa-spinner fa-spin"></i>
            </span>

            <div id="panel-server"></div> @*блок для выгрузки данных*@
        </div>

        <div class="col-sm-4">
            <h4>Рендринг на стороне клиента</h4>

            <a class="btn btn-default"
               data-ajax="true"
               data-ajax-url="@Url.Action("GetJSON", "AjaxTest", new { id = 43, msg = "123" })"
               data-ajax-loading="#client-spinner"
               data-ajax-success="OnDataLoaded"> @*имя функции скрипта для вызова по завершении загрузки*@
                Загрузка
            </a>

            <span id="client-spinner" style="display: none">
                <i class="fa fa-spinner fa-spin"></i>
            </span>

            <div id="panel-client"></div>   @*блок для выгрузки данных*@

        </div>

        <div class="col-sm-4">
            <h4>Рендринг вручную (собственный js-скрипт)</h4>

            <a class="btn btn-default" id="load-data-button">Загрузка</a>

            <div id="panel-js"></div>    @*блок для выгрузки данных*@
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.min.js"></script>
    <script>
        //для рендеринга на стороне клиента
        OnDataLoaded = data => {    //в data содержится json-объект, к полям которого можно обращаться напрямую
            var host = $("#panel-client"); //указываем блок для выгрузки данных
            host.empty();   //очищаем его
            host.append("msg: " + data.message);    //добавляем в блок данные из json-объекта
            host.append("<br/>");
            host.append("time: " + data.serverTime);
        }
        //для рендеринга вручную
        $("#load-data-button").click(e => { //при клике на кнопку
            e.preventDefault();
            console.log("Send request to server");
            $.get("@Url.Action("GetJSON", "AjaxTest")", { id: 123, msg: "QWE" })    //отправляем данные
                .done(data => {
                    var host = $("#panel-js"); //указываем блок для выгрузки данных
                    host.empty();   //очищаем
                    host.append("msg: " + data.message);    //наполняем данными
                    host.append("<br/>");
                    host.append("time: " + data.serverTime);
                });
        });
    </script>
}